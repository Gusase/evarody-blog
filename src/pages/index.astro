---
import MainLayout from "../layouts/MainLayout.astro";
import { formatDate } from "../helpers/date";

const query = `
query getDiscussios($repoName: String!, $repoOwner: String!){
  repository(owner:$repoOwner, name: $repoName) {
    id,
    owner{
        avatarUrl,
        login,
        url
    },
    name,
    description,
    nameWithOwner,
    createdAt,
    url,
    visibility,
    hasDiscussionsEnabled,
    discussions(first:100) {
        pageInfo{
            endCursor,
            hasNextPage,
            hasPreviousPage,
            startCursor
        },
        edges{
            cursor
            node{
                title,
                bodyText,
                createdAt,
            },
        },
        nodes {
        # type: Discussion
        id
      },
        totalCount,
    },
    discussionCategories(first:2){
        edges{
            node{
                id,
                name,
            },
        },
    },
    languages(first:1){
        nodes{
            name
        }
    },
    openGraphImageUrl
  }
}
`;

const variables = {
  repoName: "unrelease-blog",
  repoOwner: "GalaxyVallen",
};

const response = await fetch(import.meta.env.PUBLIC_GITAPI, {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
    Authorization: `Bearer ${import.meta.env.AUTH_TOKEN}`,
  },
  body: JSON.stringify({
    query: query,
    variables: variables,
  }),
});

const json = await response.json();
const { data } = json;
